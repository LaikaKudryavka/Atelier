
extends layout

block content
	div.container(style='margin:20px auto')
		table.table.table-bordered.table-striped
			thead.thead-dark
				tr
					th(style='width:50px;text-align:center') #
					th(style='width:220px') Name
					th(style='width:220px') Username
					th(style='width:220px') id
					th language
					th %
					th Account Created
			tbody
			- for (var i = 0; i < accts.length; i++)
				tr
					td(style='text-align:center')= i+1
					td= accts[i].name
					td= accts[i].user
					td= accts[i]._id
					td= accts[i].comlang
					td= accts[i].comlangExp
					td= accts[i].date