  style.
    .admin-box{
    margin-top: 3vw;
    }
    .admin_content{
      margin-left: 4vw;
      margin-top: 1vw;
    }
    .hr-sect {
    display: flex;
    flex-basis: 100%;
    align-items: center;
    color: rgba(0, 0, 0);
    font-size: 12px;
    margin: 8px 0px;
    }
    .hr-sect::before{
    content: "";
    flex-grow: 1;
    background: rgba(0, 0, 0);
    height: 1px;
    font-size: 0px;
    line-height: 0px;
    margin: 0px 20px;
    }
    .hr-sect::after {
    content: "";
    flex-grow: 5;
    background: rgba(0, 0, 0);
    height: 1px;
    font-size: 0px;
    line-height: 0px;
    margin: 0px 20px;
    }
    
  script.
    let i = 0;
    let index = 0;

    function rowAdd(){
    var objRow;
    objRow = document.all["tblShow"].insertRow();
    var objCell_Id = objRow.insertCell();
    objCell_Id.innerHTML = `${i+1}`;
    var objCell_Nm = objRow.insertCell();
    objCell_Nm.innerHTML = `<input type = 'date' id = 'date' name = 'date[${i}]' size = '10' value = ''/>`;
    var objCell_Tel = objRow.insertCell();
    objCell_Tel.innerHTML = 
    `<select value="" name="category[${i}]">
      <option value="">분류</option>
      <option value="certificate">certificate</option>
      <option value="career">career</option>
      <option value="education">education</option>
    </select>`;
    var objCell_adr = objRow.insertCell();
    objCell_adr.innerHTML = `<input type = 'text' id = 'content' name = 'content[${i}]' size = '60' value = ''/>`;
    i++;
    return i;
    }

    function mySkillRow(){
    var objRow;
    objRow = document.all["mySkill-row"].insertRow();
    var myskill = objRow.insertCell();
    myskill.innerHTML = `${index+1}`;
    var myskill_content = objRow.insertCell();
    myskill_content.innerHTML = `<input type = 'text' id = 'myskill-content' name = 'skill[${index}]' size = '10' value = ''/>`;
    var myskill_range = objRow.insertCell();
    myskill_range.innerHTML = `<input type = "range" id= "myskii-range" name = 'skill_exp[${index}]' min = "0" max = "100">`
    index++;
    return index;
    }

