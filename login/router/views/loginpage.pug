doctype html
html(lang='ko')
  head
    title Login V19
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    link(rel='stylesheet' href='/css/util.css')
    link(rel='stylesheet' href='/css/main.css')

  body
    .limiter
      .container-login100
        .wrap-login100.p-l-55.p-r-55.p-t-65.p-b-50
          form.login100-form.validate-form(method="post" action="/auth/login")
            span.login100-form-title.p-b-33
              | Account Login
            .wrap-input100.validate-input(data-validate='User is required: ex@abc.xyz')
              input.input100(type='text', name='user', placeholder='User')
              span.focus-input100-1
              span.focus-input100-2
            .wrap-input100.rs1.validate-input(data-validate='Password is required')
              input.input100(type='password', name='password', placeholder='Password')
              span.focus-input100-1
              span.focus-input100-2
            .container-login100-form-btn.m-t-20
              button.login100-form-btn
                | Sign in
            .text-center.p-t-45.p-b-4
              span.txt1
                | Forgot
              a.txt2.hov1(href='#')
                | Username / Password?
            .text-center
              span.txt1
                | Create an account?
              a.txt2.hov1(href='/auth/signup')
                | Sign up
    
    script(src='js/jquery-3.2.1.min.js')
    script(src='js/loginpage.js')

